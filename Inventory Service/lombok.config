# This file is used to configure Lombok

# Tells Lombok to add @lombok.Generated annotation to all generated methods
lombok.addLombokGeneratedAnnotation = true

# Tells Lombok that this directory is the root directory and that it shouldn't search parent directories for more configuration files
config.stopBubbling = true

# Tells Lombok to add @ConstructorProperties to generated constructors
lombok.anyConstructor.addConstructorProperties = true

# Enable all Lombok features
lombok.accessors.chain = true
lombok.fieldDefaults.defaultPrivate = true
lombok.fieldDefaults.defaultFinal = false

# Tells Lombok to copy all non-final fields to the builder
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Qualifier
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Value
